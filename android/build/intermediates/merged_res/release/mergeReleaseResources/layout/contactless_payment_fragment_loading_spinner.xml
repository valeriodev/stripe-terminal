<?xml version="1.0" encoding="utf-8"?><!-- Contains all tap zone views for each state -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loadingSpinnerBox"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:visibility="invisible"
    app:layout_constraintDimensionRatio="1:1"
    app:layout_constraintWidth_percent="@dimen/cots_tap_zone_scaling"
    android:elevation="8dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:padding="0dp" >

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/loadingSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:indeterminate="true"
        app:indicatorSize="@dimen/cots_loading_screen_spinner_icon_size"
        app:trackThickness="@dimen/cots_loading_screen_spinner_icon_track_thickness"
        app:trackCornerRadius="@dimen/cots_loading_screen_spinner_icon_track_corner_radius"
        android:contentDescription="@string/cots_loading"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
